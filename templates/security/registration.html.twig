{% extends 'base.html.twig' %}

{% block body %}
	<div class="position-absolute top-50 start-50 translate-middle" id="contain">
		{{ form_start(form) }}
		<center>
			<h1>Création d'un compte
			</h1>
		</center>


		{{ form_row(form.username, {'label' : 'Nom d\'utilisateur','attr':
    {'placeholder' : 'Entrer le nom d\'utilisateur'}}) }}
		{{ form_row(form.name, {'label' : 'Prénom','attr':
    {'placeholder' : 'Entrer votre prénom'}}) }}
		{{ form_row(form.familyName, {'label' : 'Nom','attr':
    {'placeholder' : 'Entrer votre nom'}}) }}
		{{ form_row(form.email, {'label' : 'Adresse e-mail','attr':
    {'placeholder' : 'Entrer votre adresse e-mail'}}) }}
		{{ form_row(form.password, {'label' : 'Mot de passe','attr':
    {'placeholder' : 'Entrer le mot de passe'}}) }}
		{{ form_row(form.confirm_password, {'label' : 'Confirmez mot de passe','attr':
    {'placeholder' : 'Confirmer votre mot de passe'}}) }}
		<br>
		<br>
		<center>
			<input class="btn btn-danger btn-lg gap-2 col-6 mx-auto" type="submit" id='submit' value='Créer un compte'>
			<br>
			<br>

			<a>Vous avez déjà un compte existant ?
			</a>
			<a id="sc" href="{{ path('security_login') }}">Connectez-vous !</a>
		</center>
	</div>
	{{ form_end(form) }}
{% endblock %}
